<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">
  <label>Name:</label>
  <input type="text" name="pet[name]" id="pet_name" value=<%= @pet.name %> >

  <label>Choose existing owner</label>
  <% @owners.each do |owner| %>

    <input type="radio" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.name %>" <%='checked' if @pet.owner.name == owner.name %>>
    <%= owner.name %>
    </input>

  <% end %>
  <label>new owner:</label>
  <input type="text" name="owner[name]" id="owner_name">
  <input type="hidden" name="_method" value="patch">
  <input type="submit" name="submit" id="Update Pet" value="Update Pet">
</form>
