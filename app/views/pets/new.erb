<h1>Create a new Pet</h1>

<form class="" action="/pets" method="post">
  <label>Name:</label>
  <input type="text" name="pet[name]" id="pet_name"

  <label>Choose existing owner</label>
  <% @owners.each do |owner| %>

    <input type="checkbox" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>">
    <%= owner.name %>
    </input>

  <% end %>
  <label>new owner:</label>
  <input type="text" name="owner[name]" id="owner_name">
  <input type="submit" name="submit" value="Create Pet">
</form>
